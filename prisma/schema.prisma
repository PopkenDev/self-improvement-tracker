generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String          @id @default(cuid())
  name          String?
  email         String          @unique
  emailVerified DateTime?
  image         String?
  password      String?
  accounts      Account[]
  nutritionGoal NutritionGoal[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model NutritionGoal {
  id          String @id @default(cuid())
  userId      String
  calories    Int
  protein     Int
  carbs       Int
  fat         Int
  fiber       Int
  sugar       Int
  sodium      Int
  cholesterol Int

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}
